@model Bourse.Models.UsersModel
@{
    ViewBag.Title = "Inscription";
}

<h2>Inscription</h2>
<p style="color:red">@TempData["Notice"]</p>

@using (Html.BeginForm("Subscribe",
                        "Home",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.Label("Nom d'usager") <br />
        @Html.TextBox("UserName", Model.UserName, "", new { Class = "form-control" }) <br /><br />


        @Html.Label("Mot de passe")<br />
        @Html.TextBox("Password", Model.Password, "", new { Class = "form-control" })<br /><br />


        @Html.Label("Nom au complet")<br />
        @Html.TextBox("FullName", Model.FullName, "", new { Class = "form-control" })<br /><br />


        @Html.Label("Courriel")<br />
        @Html.TextBox("EMail", Model.EMail, "", new { Class = "form-control" })<br /><br />

        @Html.Label("Numero de carte de Crédit")<br />
        @Html.TextBox("CarteCredit", Model.CarteCredit, "", new { Class = "form-control" })<br /><br />

        @Html.Label("Solde à ajouter depuis la carte")<br />
        @Html.TextBox("Solde", "1", new { @type = "number", @min = "1" , Class = "form-control" })

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Créer..." class="btn btn-primary" />
            </div>
        </div>
    </div>
}
