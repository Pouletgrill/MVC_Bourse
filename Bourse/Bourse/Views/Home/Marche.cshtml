@model Bourse.Models.BourseModel
@{
    ViewBag.Title = "Marché";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Marché</title>
    <script src="@Url.Content("~/Scripts/jquery-1.11.3.min.js")" type="text/javascript"></script>
</head>
<body>
    <h2>Marché.</h2>
    <div id="contributors">
    </div>
</body>
</html>

<script type="text/javascript">
    var timer;
    function ChargeVuePartielle() {
        $.ajax({
            url: '@Url.Action("PartielMarche")',
            type: 'GET',
            dataType: 'html',
            success: function (result) {
                $('#contributors').html(result);
            }
        });
    }

    ChargeVuePartielle();
    $(function () {
        timer = window.setInterval("ChargeVuePartielle()", 3000);
    });
</script>


